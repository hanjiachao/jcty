.btns{
	margin-top: 60rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.btns .btn{
	width: 47%;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	color: #fff;
	background: #FF8903;
	padding: 0;
	font-size: 30rpx;
	font-weight: normal;
	border-radius: 6rpx;
}
.prew_video{
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, .8)
}
.prew_video video{
  width: 100%;
  position: relative;
  top: 50%;
  transform: translateY(-50%);
}
.shareBtn{
	width: 80rpx !important;
	position: fixed;
	right: 30rpx;
	top: 40%;
	padding: 15rpx 0;
	background: #ff8903;
	border-radius: 8rpx;
}
.shareBtn .shareImg{
	width: 80rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}
.shareBtn .shareImg image{
	width: 44rpx;
	height: 44rpx;
}
.shareBtn .text{
	margin-top: 6rpx;
	color: #ff8903;
	font-size: 22rpx;
	line-height: 30rpx;
	color: #fff;
	font-weight: normal;
}