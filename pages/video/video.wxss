/* pages/video/video.wxss */
.conts{
  padding: 0 30rpx 30rpx;
}
.conts .top{
  padding-bottom: 40rpx;
}
.conts .top .text{
  color: #000;
  font-size: 32rpx;
  line-height: 60rpx;
}
.list{
  border-top: 2rpx solid #ccc;
  padding-top: 30rpx;
}
.list.borderTop{
  border-top: 4rpx solid #ccc;
  padding-top: 0;
}
.list .tip{
	font-size: 24rpx;
	color: #888;
	line-height: 60rpx;
	text-align: center;
}
.list .text{
  color: #000;
  font-size: 32rpx;
  margin-bottom: 30rpx;
}
.list .item{
  float: left;
  text-align: center;
  margin-bottom: 30rpx;
  margin-right: 30rpx;
}
.list .item .box{
  width: 200rpx;
  height: 300rpx;
  background: #E8641A;
  overflow: hidden;
}
.list .item .box video{
  display: block;
  width: 100%;
  height: 100%;
}
.list .item .box image{
  width: 100%;
  height: 100%;
}
.list .item .box .add{
  width: 100rpx;
  margin: 100rpx auto;
}
.list .item text{
  display: block;
  color: #8D8D8D;
  font-size: 20rpx;
  padding-top: 20rpx;
}
