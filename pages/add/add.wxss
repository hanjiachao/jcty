/* pages/add/add.wxss */
.conts{
  padding: 0 30rpx 30rpx;
}
.conts .logo{
  width: 300rpx;
  margin: 60rpx auto 0;
}
.conts .form{
  border-top: 1rpx solid #ccc;
  margin-top: 60rpx;
  padding: 60rpx 0;
}
.conts .form .section{
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  padding-right: 40rpx;
  margin: 30rpx auto 0;
  border: 1rpx solid #000;
  position: relative;
}
.conts .form .section:after{
	content: '*';
	color: #f00;
	line-height: 80rpx;
	position: absolute;
	right: -30rpx;
	top: 4rpx;
}
.conts .form .section image{
  width: 30rpx;
  position: absolute;
  right: 10rpx;
  top: 50%;
  margin-top: -15rpx;
}
.conts .form .section .on{
  transform: rotate(180deg)
}
.conts .form .car_id{
  width: 600rpx;
  height: 70rpx;
  line-height: 70rpx;
  margin: 60rpx auto 0;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #FF8903;
  border-bottom: 1px solid #000;
}
.conts .ipt_list{
  padding: 60rpx 0 0;
  width: 600rpx;
  margin: 0 auto;
}
.conts .ipt_list .item{
  height: 80rpx;
  line-height: 80rpx;
  margin-bottom: 40rpx;
}
.conts .ipt_list .item .text{
  width: 180rpx;
  color: #535050;
  font-size: 32rpx;
}
.conts .ipt_list .item .ipt{
  height: 100%;
  margin-left: 190rpx;
  padding: 0 10rpx;
  border: 2rpx solid #535050;
  box-sizing: border-box;
}
.conts .ipt_list .item .ipt input{
  height: 100%;
}
.conts .btn{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
  background: #FF8903;
  border-radius: 8rpx;
}
.share{
  width: 500rpx;
  background: #fff;
  border-radius: 8rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  text-align: center;
  padding: 60rpx;
  transform: translate(-50%, -50%);
  box-shadow: 2rpx 2rpx 24rpx 2rpx rgba(102, 102, 102, 0.2);
  overflow: hidden;
  z-index: 999;
}
.share .closeBtn{
	position: absolute;
	right: 0;
	top: 0;
	width: 36rpx;
	height: 36rpx;
	padding: 20rpx;
}
.share .tit{
  color: #000;
  font-size: 32rpx;
}
.share .btm{
  margin-top: 40rpx;
}
.share .btm button{
  width: 200rpx;
  color: #fff;
  font-size: 32rpx;
}
.share .btm .close{
  background: #ccc;
}
.share .btm .share_btn{
  background: #FF8903;
}